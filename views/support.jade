body
    include inc/header
    main.widthBase.config
       section.config--Base
        header.config--Header
         h2.title
          i(class="fa fa-cog" aria-hidden="true") 
          | Ticket / Support
       section.support.flexContainer
        section.support--Iz
         form.formSupport(action="/panel/ticket", method="post")
          fieldset.formSupport--Fieldset
           label.labelSupport--Label
            | Nuevo ticket de soporte
           input(type="text", placeholder="Titulo", name="name")
          fieldset.formSupport--Fieldset
           label.labelSupport--Label
            | Asunto
           input(type="text", placeholder="Asunto", name="asunto")
          fieldset.formSupport--Fieldset
           label.labelSupport--Label
            | Mensaje
           textarea(type="text", placeholder="mensaje", name="mensaje")
          fieldset.formSupport--Fieldset.uCenter
           input(type="submit", value="Enviar Ticket")

        aside.support--De
         article.support--De--Ticket
          header.ticket--Header
           h2.title
            | Ultimos Tickets
         if support 
           each ti in support
              div.ticket--Container
               a.link(href="#")
                div.ticket--Container--Iz
                 span.title
                  | Ticket
                div.ticket--Container--Center
                 span.title
                  | #{ti.asunto}
                div.ticket--Container--De
                 span.title
                  | Enviado
         else
          //