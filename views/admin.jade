body
  include inc/header
  main.widthBase.admin
   header.widthBase--Header
    h2.title
     | Administrador
   section.usersTickets
     
    each items in support 
      article.article(data-ticket="#{items.id}", data-iduser="#{items.iduser}")
       .list
        div.list--Iz 
         a.link
          | Soporte: #{items.name}
         span.date
          | Fecha: #{items.fecha} 

        div.list--De
         li.subList
          a.subLink(href="panel/admin/ticket/#{items.id}")
           | Responder            
  
  script(src='../../../javascripts/app.js')
  script(src='../../../javascripts/buttons.js')
  script(src='../../../javascripts/sorttable.js')
 