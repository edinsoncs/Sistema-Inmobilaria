        p.formPanelHome--Form--Success
          | Gracias por selecionar el pago de MercadoPago, El pago se encuentra 
          span.jsTypePayment #{description}
  script.
   $(document).ready(function(){ 
    $.ajax({
   	 url: "../mercadopago",
   	 method: "POST",
   	 dataType: "json",
   	 contentType: "application/json",
   	 data: JSON.stringify({
   		type: $(".jsTypePayment").text()
   	 }),
   	 success: function(e){
   	 	setTimeout(function(){
			window.location.href = '/panel';
