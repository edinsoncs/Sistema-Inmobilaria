body
    include inc/header
    main.widthBase.config
       section.config--Base
        header.config--Header
         h2.title
          i(class="fa fa-cog" aria-hidden="true") 
          | Ticket / Support
       section.support
        article.supportShow
          header.supportShow--Header
            figure.showHeader--Iz
              img(src="/fotoprofile/#{mensaje.foto}", alt="")
            aside.showHeader--De
             h2.title
              | #{mensaje.name}
            div.showHeader--Date
              strong.createDate
               | #{mensaje.fecha}
          div.supportShow--Data
            strong.showAssunt
              | Asunto: #{mensaje.asunto}
            p.show
              |#{mensaje.mensaje}
        article.supportShow
          header.supportNotShow--Header
            h2.title
              | Responder
          form.supportSend(action="", method="GET")
           textarea(name="mensaje", cols="30", rows="10")
           input(type="submit", value="Responder")
      
    script(src='../../../javascripts/app.js')