<!DOCTYPE html>
html(lang="es")
  head
    meta(charset="UTF-8")
    meta(name="viewport", content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0")
    meta(name="description", content="Administracion de inmobiliarias")

    base(href="http://zimba.me/")
    
    title #{title}
    
    link(rel="stylesheet", href="../../../stylesheets/normalize.min.css")
    link(rel="stylesheet", href="../../../stylesheets/icons.css")
    link(rel="stylesheet", href="../../../stylesheets/app.css")
    link(rel="stylesheet", href="../../../stylesheets/dcalendar.picker.css")

    link(href='https://fonts.googleapis.com/css?family=Open+Sans:400,400italic,600,600italic,700,700italic', rel='stylesheet', type='text/css')

    link(rel="stylesheet", href="https://cdn.datatables.net/1.10.12/css/jquery.dataTables.min.css")
    

    script(src="../../../javascripts/jquery-1.11.2.min.js")
    script(src="../../../javascripts/app-dev1.js")
    script(src="https://cdn.datatables.net/1.10.12/js/jquery.dataTables.min.js")

    //Calendary
    script(src="../../../javascripts/jquery.e-calendar.js")


    //Library create edinsoncs flatui buttons
    script(src="http://ockang.github.io/jquery-flatui/jquery.flat.min.js")
    script(src="../../../javascripts/dcalendar.picker.js")

body
  include inc/header
  section.header__Welcome.widthBase
    header.header__Welcome--Iz
     ul.ul
      li.list
       a.link(href="#")
        i(class="fa fa-briefcase", aria-hidden="true") 
        |  #{empresa} 
      li.list
       span.break /
      li.list
       a.link.actuality(href="../panel/agenda")
        | Agenda
      li.list
       span.break /
      li.list
       a.link.actuality(href="")
        | Nueva Agenda
  main.widthBase.add
   form.newPropiedad--Form(action="panel/addagenda", method="POST")
      
      section.fieldset--StepsContainer
        div.fieldset--Steps
         header.header--Steps
          h2.title
            i.fa.fa-home
            | Nombre de agenda     
         fieldset.fieldset--Form
           input(type="text", placeholder="Ingrese nombre de su agenda", required, name="nombreagenda")
         fieldset.fieldset--Form
            select(name="propiedades")
             option(value="Selecione")
              | Propiedad a visitar
             each i in disponibles
              option(value="#{i.nombre}")
                | #{i.nombre}
              
        div.fieldset--Steps
          header.header--Steps
            h2.title
              i.fa.fa-user
              | Nombre de la persona
          div.form--Container
           fieldset.fieldset--Form
             input(type="text", placeholder="Nombre del visitante", required, name="namevisita")
           fieldset.fieldset--Form
             input(type="tel", placeholder="Tel visitante", required, name="telvisita")
          div.form--Container
            fieldset.fieldset--Form
              input(type="number", placeholder="Dni visitante", required, name="dnivisita")
            fieldset.fieldset--Form
              input(type="email", placeholder="Email visitante", required, name="emailvisita")
        
      section.fieldset--StepsContainer

        div.fieldset--Steps
          header.header--Steps
            h2.title
              i.fa.fa-clock-o
              | Fecha y Hora
          div.form--Container
           fieldset.fieldset--Form
             input(type="text", placeholder="Nombre del visitante", required, name="fechaagenda")
           fieldset.fieldset--Form
             input(type="number", placeholder="Horario 16", required, name="horario")
     
      fieldset.fieldset--Form.uMarginDouble
        input(type="submit", class="submit", value="Crear Propiedad")  
  
  script(src='../../../javascripts/app.js')
  script(src='../../../javascripts/buttons.js')
